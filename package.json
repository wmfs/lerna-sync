{
  "name": "@wmfs/lerna-sync",
  "version": "0.0.0-semantically-released",
  "description": "A package to synchronize distributed GitHub repos inside a Lerna monorepo.",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/lerna-sync#readme",
  "keywords": [
    "lerna",
    "monorepo",
    "tymly",
    "package"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmfs/lerna-sync.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/lerna-sync/issues"
  },
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@octokit/graphql": "5.0.4",
    "chalk": "4.1.2",
    "dottie": "2.0.6",
    "git-repo-info": "2.1.1",
    "glob": "11.1.0",
    "humanize-duration": "3.33.0",
    "jsonfile": "6.1.0",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "chai": "4.5.0",
    "codecov": "3.8.3",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "cz-conventional-changelog": "3.3.0",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "semantic-release": "25.0.2",
    "standard": "17.1.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@semantic-release/git": "10.0.1"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
