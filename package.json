{
  "name": "@wmfs/lerna-sync",
  "version": "0.0.0-semantically-released",
  "description": "A package to synchronize distributed GitHub repos inside a Lerna monorepo.",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/lerna-sync#readme",
  "keywords": [
    "lerna",
    "monorepo",
    "tymly",
    "package"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmfs/lerna-sync.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/lerna-sync/issues"
  },
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@octokit/graphql": "2.0.1",
    "chalk": "2.4.2",
    "dottie": "2.0.1",
    "git-repo-info": "2.1.0",
    "glob": "7.1.3",
    "humanize-duration": "3.17.0",
    "jsonfile": "5.0.0",
    "lodash": "4.17.15"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "codecov": "3.6.1",
    "conventional-changelog-metahub": "3.0.0",
    "cz-conventional-changelog": "3.0.2",
    "mocha": "6.2.2",
    "nyc": "15.0.0",
    "semantic-release": "15.14.0",
    "standard": "12.0.1",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha && standard",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
